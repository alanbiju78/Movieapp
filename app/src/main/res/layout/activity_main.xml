<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="85px"
    android:background="@drawable/background">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomButtonsLayout"
        android:paddingBottom="8dp"> <!-- Adds space from the phone's navigation button -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="85px"
            android:layout_marginBottom="85px"
            android:padding="68px">

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:padding="8dp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie Name"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:padding="8dp"></TextView>

        <EditText
            android:id="@+id/mname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the movie name"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColorHint="#B4B0B0"></EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actor"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:padding="8dp"></TextView>

        <EditText
            android:id="@+id/aname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the actor's name"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColorHint="#B4B0B0"></EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actress"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:padding="8dp"></TextView>

        <EditText
            android:id="@+id/acname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the actresse's name"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColorHint="#B4B0B0"></EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Year of Release"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:padding="8dp"></TextView>

        <EditText
            android:id="@+id/yor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter year only"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColorHint="#B4B0B0"></EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Language"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:padding="8dp"></TextView>

        <EditText
            android:id="@+id/lang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the course"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColorHint="#B4B0B0"></EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gross collection"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:padding="8dp"></TextView>

        <EditText
            android:id="@+id/gross"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the amount in millions"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColorHint="#B4B0B0"></EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distributor Name"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:padding="8dp"></TextView>

        <EditText
            android:id="@+id/dname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the distributor's name"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColorHint="#B4B0B0"></EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Producer Name"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:padding="8dp"></TextView>

        <EditText
            android:id="@+id/pname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the producer's name"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColorHint="#B4B0B0"></EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Production Company"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:padding="8dp"></TextView>

        <EditText
            android:id="@+id/pcname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the company's name"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColorHint="#B4B0B0"></EditText>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="42dp"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/subbt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00A200"
            android:padding="8dp"
            android:text="Submit"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/vallbt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#A2A202"
            android:padding="8dp"
            android:text="View All"
            android:textColor="#ffffff"
            android:textSize="18dp" />

    </LinearLayout>
</RelativeLayout>
